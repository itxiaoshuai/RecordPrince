<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#F8D71C"
        >

        <ImageView
            android:id="@+id/iv_read_compare_show_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back_chevron"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="录音测试"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_re_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="重录"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </RelativeLayout>

    <WebView
        android:id="@+id/wv_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </WebView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/darkgray"/>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/darkgray"/>

    <RelativeLayout
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="00:00:00"
            android:textColor="#FF2828"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/banji_icon_bofang_hui"/>

        <ImageView
            android:id="@+id/iv_record"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="56dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/banji_icon_luyin"/>

        <ImageView
            android:id="@+id/iv_upload"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="56dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/banji_icon_fabu_hui"/>
    </RelativeLayout>
</LinearLayout>
